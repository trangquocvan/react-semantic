{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
		"suppressImplicitAnyIndexErrors": true,
		"lib": ["es2015", "es2017", "dom"],
		"allowJs": true,
        "checkJs": false,
    },
    "include": [
        "./src/**/*"
    ]
}